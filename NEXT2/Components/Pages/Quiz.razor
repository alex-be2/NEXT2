@page "/Quiz/{thisquestion}"
@using Next2_BlazorServerApplication.Data
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation

@layout MainLayout

<div class="centre-content container-centre margin-t-50">
    @*progress bar*@
    <div class="progress-b">
        <p>100% complete</p>
    </div>
    @*questions container*@
    <div class="white-container">
        <h2>Section 1</h2>
        <hr />
        <div style="padding: 30px;">
            <p class="text-l">@currentquestion.QuestionText</p>
            <div class="container-space-between">
                @for (int i = 1; i < currentanswers.Count() + 1; i++)
                {
                    Answer current = currentanswers[i];
                    <label class="container">
                        <input type="radio" name="radio" @onclick="() => selectAnswer(i)">
                        <span class="selection">@current.AnswerText</span>
                    </label>
                }
            </div>
        </div>
